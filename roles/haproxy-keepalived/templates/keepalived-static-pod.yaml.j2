apiVersion: v1
kind: Pod
metadata:
  name: keepalived-{{ inventory_hostname }}
  namespace: kube-system
  labels:
    component: keepalived
    tier: control-plane
spec:
  containers:
  - name: keepalived
    image: osixia/keepalived:2.0.20
    imagePullPolicy: IfNotPresent
    securityContext:
      capabilities:
        add:
        - NET_ADMIN
        - NET_BROADCAST
        - NET_RAW
    volumeMounts:
    - mountPath: /usr/local/etc/keepalived/keepalived.conf
      name: config
    resources:
      requests:
        cpu: 50m
        memory: 64Mi
      limits:
        cpu: 100m
        memory: 128Mi
  hostNetwork: true
  restartPolicy: Always
  volumes:
  - name: config
    hostPath:
      path: /etc/kubernetes/keepalived/keepalived.conf
      type: File
